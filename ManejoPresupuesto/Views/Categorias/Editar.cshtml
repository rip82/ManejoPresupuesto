@model Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>Editar Categoria</h1>
<h5>La categoria nos permite indicar en qué gastamos nuestro dinero,
    también, de dónde provienen nuestros ingresos.</h5>

<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="txt-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="txt-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()" 
            class="form-select"></select>
        <span asp-validation-for="TipoOperacionId" class="txt-danger"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}